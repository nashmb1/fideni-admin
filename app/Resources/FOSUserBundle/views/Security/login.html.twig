{% extends '@FideniCore/default/base_layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheet %}
	<link href="{{ asset('bundles/fideniuser/css/login_style.css') }}" rel="stylesheet" type="text/css" media="all"/>
	<link href='//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
{% endblock %}
{% block body %}
	<div class="login-form">
		<div class="top-login">
			<span><img src="{{ asset('bundles/fidenicore/img/logo.jpeg')|imagine_filter('profile_image') }}" alt=""/></span>
		</div>

		<div class="login-top">
			{% if error %}
				<div class="login-block-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
			<form action="{{ path('fos_user_security_check') }}" method="post">
				{% if csrf_token %}
					<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
				{% endif %}
				<div class="login-ic">
					<i ></i>
					{#<input type="text"  name="_username" value="User name" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'User name';}"/>#}
					<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

					<div class="clear"> </div>
				</div>
				<div class="login-ic">
					<i class="icon"></i>
					{#<input type="password"  name="_password" value="Password" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'password';}"/>#}
					<input type="password" id="password" name="_password" required="required" />

					<div class="clear"> </div>
				</div>

				<div class="log-bwn">
					{#<input type="submit"  value="Login" >#}
					<input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
				</div>
			</form>
		</div>
		<p class="copy">Â© Fideni {{ 'now'|date('Y') }} and beyond | All rights reserved</p>
	</div>
{% endblock %}
{% block javascripts %}
{% endblock %}

