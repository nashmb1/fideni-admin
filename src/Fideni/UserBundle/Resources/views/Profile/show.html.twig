{% extends '@FideniCore/default/base_layout.html.twig' %}

{% block content %}
  <!-- Main content -->
  <section>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">

        <!-- Profile Image -->
        <div class="box box-primary">
          <div class="box-body box-profile">
            <img class="profile-user-img img-responsive img-circle" src="{{ vich_uploader_asset(user, 'photoFile') }}" alt="User profile picture">

            <h3 class="profile-username text-center">{{ user.name ~ ' ' ~ user.surname }}</h3>

            <p class="text-muted text-center">{{ user.job }}</p>

            <ul class="list-group list-group-unbordered">
              <li class="list-group-item">
                <b>Actions:</b> <a class="pull-right">1,322</a>
              </li>
              <li class="list-group-item">
                <b>Commission:</b> <a class="pull-right">{{ user.jobInFideni }}</a>
              </li>
              <li class="list-group-item">
                <b>Porteur de projet:</b> <a class="pull-right">Non</a>
              </li>
            </ul>

          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->

        <!-- About Me Box -->
        <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title">A propos de moi</h3>
          </div>
          <!-- /.box-header -->
          <div class="box-body">
            <strong><i class="fa fa-book margin-r-5"></i> Education</strong>

            <p class="text-muted">
              {{ user.formation }}
            </p>

            <hr>

            <strong><i class="fa fa-book margin-r-5"></i> Expérience</strong>

            <p class="text-muted">
              {{ user.experience }}
            </p>

            <hr>

            <strong><i class="fa fa-map-marker margin-r-5"></i> Adresse</strong>

            <p class="text-muted">{{ user.country ~ ' ' ~ user.city }}</p>

            <hr>

            <strong><i class="fa fa-pencil margin-r-5"></i> Compétences</strong>

            <p>
              <span class="label label-danger">UI Design</span>
              <span class="label label-success">Coding</span>
              <span class="label label-info">Javascript</span>
              <span class="label label-warning">PHP</span>
              <span class="label label-primary">Node.js</span>
            </p>
            {% if id is null %}
              <hr>
              <a href="{{ path('fideni_user_profile_edit') }}" class="btn btn-primary btn-block"><b>Modifier mes informations</b></a>
              <a href="{{ path('fos_user_change_password') }}" class="btn btn-primary btn-block"><b>Modifier mon mot de passe</b></a>
            {% endif %}
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
{% endblock %}
