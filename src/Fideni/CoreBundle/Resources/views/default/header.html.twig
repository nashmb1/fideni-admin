<!-- Main Header -->
<header class="main-header">

    <!-- Logo -->
    <a href="{{ path('fideni_core_homepage') }}" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>F</b>P</span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>Fideni </b>PROJECT</span>
    </a>

    <!-- Header Navbar -->
    <nav class="navbar navbar-static-top" role="navigation">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <!-- Navbar Right Menu -->
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li>
                    <a href="{{ url('easyadmin') }}">Administration</a>
                </li>
                {#{{ dump('aa.png'|imagine_filter('my_thumb')) }}#}
                <!-- User Account Menu -->
                <li class="dropdown user user-menu">
                    <!-- Menu Toggle Button -->
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <!-- The user image in the navbar-->
                        {% if app.user.photo is defined and app.user.photo is not empty %}
                            <img src="{{ vich_uploader_asset(app.user, 'photoFile')|imagine_filter('my_thumb') }}" class="user-image" alt="User Image">
                        {% else %}
                            <img src="{{ asset('bundles/fidenicore/img/user5-128x128.jpg')|imagine_filter('my_thumb') }}">
                        {% endif %}
                        <!-- hidden-xs hides the username on small devices so only the image appears. -->
                        <span class="hidden-xs">{{ app.user.name }} {{ app.user.surname }}</span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- The user image in the menu -->
                        <li class="user-header">
                            {% if app.user.photo is defined and app.user.photo is not empty %}
                                <img src="{{ vich_uploader_asset(app.user, 'photoFile')|imagine_filter('my_thumb') }}" class="img-circle" alt="User Image">
                            {% else %}
                                <img src="{{ asset('bundles/fidenicore/img/user5-128x128.jpg')|imagine_filter('my_thumb') }}">
                            {% endif %}

                            <p>
                                {{ app.user.name }} {{ app.user.surname }}
                                <small>Member since {{ app.user.createdAt|date('dmY')}}</small>
                            </p>
                        </li>
                        <!-- Menu Body -->
                        <li class="user-body">

                        </li>
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="{{ path('fideni_user_profile_show') }}" class="btn btn-default btn-flat">Profile</a>
                            </div>
                            <div class="pull-right">
                                <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default btn-flat">DÃ©connexion</a>
                            </div>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
</header>